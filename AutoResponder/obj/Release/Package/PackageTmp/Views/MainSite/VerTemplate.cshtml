@using AutoResponder.Resources;
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Visualização do Template</h4>
</div>
<div class="modal-body">
    <div>
        @Html.Raw(System.Web.HttpUtility.HtmlDecode(ViewBag.Body))
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">@Resources.Close</button>
</div>