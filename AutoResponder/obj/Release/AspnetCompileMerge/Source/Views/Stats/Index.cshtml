@{
    String action = !String.IsNullOrEmpty(Request["action"]) ? Request["action"].ToString() : "0";
    String idt = !String.IsNullOrEmpty(Request["idt"]) ? Request["idt"].ToString() : "0";
    String idu = !String.IsNullOrEmpty(Request["idu"]) ? Request["idu"].ToString() : "0";
}
@{
    var title = "";
    var msg = "";
    if (action == "c")
    {
        title = "";
        msg = "Clique";
    }
    else if (action == "o")
    {
        title = "";
        msg = "Open";
    }
    else if (action == "u")
    {
        title = "";
        msg = "Seu registro foi removido com sucesso.";
    }
    ViewBag.Title = title;
}

<h2>Resultado</h2>
<div class="well">
    @msg
</div>
