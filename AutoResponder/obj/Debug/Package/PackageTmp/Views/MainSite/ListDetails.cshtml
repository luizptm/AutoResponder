@using AutoResponder.Resources;
<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">@Resources.ListDetails</h4>
    </div>
    <div class="panel-body" style="margin-bottom: 15px;">
        @Resources.Description: <span class="label label-default">@ViewBag.Details</span>
        &nbsp;
		@if (@ViewBag.Tag != null)
		{
			<text>
			Tag: <span class="label label-default">@ViewBag.Tag</span>
			&nbsp;
			</text>
		}
		Tags: <span class="label label-default">@ViewBag.Tags</span>
		&nbsp;
        @Resources.CreationDate: <span class="label label-default">@ViewBag.CreationDate</span>
        &nbsp;
        <button id="showAddUserToList" class="btn btn-primary" onclick="javascript: ShowAddUserToList();">@Resources.AddUser</button>
    </div>
</div>