@model AutoResponder.ViewModels.BR_UsersVM
@using AutoResponder.Resources;

    @Html.HiddenFor(model => model.idUser, new { Id = "Id" })
    <div class="form-group">
        <b>@Html.DisplayNameFor(model => model.firstName):</b><br/>
        @if (String.IsNullOrEmpty(Model.firstName)) {
            <span class='glyphicon glyphicon-minus'></span>
        }
            else
        {
            @Html.DisplayFor(model => model.firstName);
        }
    </div>

    <div class="form-group">
        <b>@Html.DisplayNameFor(model => model.middleName):</b><br/>
        @if (String.IsNullOrEmpty(Model.middleName)) {
