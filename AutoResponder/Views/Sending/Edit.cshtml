@model AutoResponder.ViewModels.BR_AutoResponder_SendingVM
@using AutoResponder.Resources;
@using System
@using System.Web
@using System.Web.Optimization
@{
    ViewBag.Title = Resources.Edit + Resources.Sending;
}

<h2>@Resources.Edit @Resources.Sending</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)
    Html.RenderPartial("_ValidationSummary");
    <fieldset>
        <legend>@Resources.Form</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.UserId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.UserId, new SelectList(ViewBag.UserId, "idUser", "firstName", Model.UserId), "- selecione -")
            @Html.ValidationMessageFor(model => model.UserId)
            <script> $("#UserId").val(@Model.UserId) </script>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TemplateId)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(m => m.TemplateId, new SelectList(ViewBag.TemplateId, "Id", "Subject", Model.TemplateId), "- selecione -") 
            @Html.ValidationMessageFor(model => model.TemplateId)
            <script> $("#TemplateId").val(@Model.TemplateId) </script>
        </div>

        <div class="editor-label">
            @Html.DisplayNameFor(model => model.SentDate)
        </div>
        <div class="editor-field">
            @Html.TextBox("SentDate", Model.SentDate)
            @Html.HiddenFor(model => model.SentDate)
            @Html.ValidationMessageFor(model => model.SentDate)
            <script>
                $("#SentDate").mask("99/99/9999 99:99:99");
                //$("#SentDate").datetimeEntry({ datetimeFormat: 'D/O/Y H:M:S', spinnerImage: '' });
            </script>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Unsubscribe)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Unsubscribe, (List<SelectListItem>)ViewBag.Range)
            @*Html.ValidationMessageFor(model => model.Unsubscribe)*@
        </div>
        <script> $("#Unsubscribe").val('@(Model.Unsubscribe == true ? "true" : "false")') </script>

        <div class="editor-label">
            @Html.LabelFor(model => model.OpenMail)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.OpenMail, (List<SelectListItem>)ViewBag.Range)
            @*Html.ValidationMessageFor(model => model.OpenMail)*@
            <script> $("#OpenMail").val('@(Model.OpenMail == true ? "true" : "false")') </script>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Bounce)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Bounce, (List<SelectListItem>)ViewBag.Range)
            @*Html.ValidationMessageFor(model => model.Bounce)*@
            <script> $("#Bounce").val('@(Model.Bounce == true ? "true" : "false")') </script>
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Click)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.Click, (List<SelectListItem>)ViewBag.Range)
            @*Html.ValidationMessageFor(model => model.Click)*@
            <script> $("#Click").val('@(Model.Click == true ? "true" : "false")') </script>
        </div>

        <div class="editor-label">
            @Html.HiddenFor(model => model.CREATION_DATE)
        </div>

        <p>
            <br />
            <input type="submit" value="@Resources.Save" class="btn btn-primary" />
            &nbsp;@Html.ActionLink("Voltar para a lista", "Index", null, new { @class = "btn btn-default" })
        </p>
    </fieldset>
}
@section Scripts {
    @*Scripts.Render("~/bundles/jquery_admin")*@
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#UserId").chosen();
        $("#TemplateId").chosen();
    });
</script>