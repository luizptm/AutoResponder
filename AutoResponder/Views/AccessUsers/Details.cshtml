@model AutoResponder.Models.Entity.BR_AccessControl_User
@using AutoResponder.Resources;

@Html.HiddenFor(model => model.Id, new { Id = "Id" })

<div class="form-group">
    <b>@Html.DisplayNameFor(model => model.Name):</b><br/>
    @if (String.IsNullOrEmpty(Model.Name))
	{
        <span class='glyphicon glyphicon-minus'></span>
    }
        else
    {
        @Html.DisplayFor(model => model.Name);
    }
</div>

<div class="form-group">
    <b>@Html.DisplayNameFor(model => model.Trigram):</b><br/>
    @if (String.IsNullOrEmpty(Model.Trigram))
	{
        <span class='glyphicon glyphicon-minus'></span>
    }
        else
    {
        @Html.DisplayFor(model => model.Trigram);
    }
</div>

<div class="form-group">
    <b>@Html.DisplayNameFor(model => model.RoleId):</b><br/>
    @Html.DisplayFor(model => model.BR_AccessControl_Role.Name)
</div>

<p>
    @Html.ActionLink(Resources.Edit, "Edit", new { id=Model.Id }, new { @class = "btn btn-default" })
</p>
<p>
    <a class="btn btn-danger" onclick="javascript: return ExcluirRegistro();">@Resources.Delete</a>
</p>